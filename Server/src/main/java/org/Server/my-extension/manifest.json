{
  "manifest_version": 2,
  "name": "URL Tracker",
  "version": "1.0",
  "permissions": [
    "tabs", 
    "activeTab", 
    "http://*/*", 
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}

